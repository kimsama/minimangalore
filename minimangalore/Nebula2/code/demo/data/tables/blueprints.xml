<!-- an automatic entity with optional static mesh collision or passive physics -->
<BluePrints>
    <!-- a light entity -->
    <Entity type="Light" cppclass="Entity">
        <Property type="TimeProperty"/>
        <Property type="LightProperty"/>
        <Property type="PathAnimProperty"/>
    </Entity>

    <!-- a camera entity with like maya input -->
    <Entity type="Camera" cppclass="Entity">
        <Property type="VideoCameraProperty"/>
        <Property type="InputProperty"/>
        <Property type="PathAnimProperty"/>
    </Entity>

    <!-- a ready-made actor entity -->
    <Entity type="Actor" cppclass="Entity">
        <Property type="ActorGraphicsProperty" />
        <Property type="ActorPhysicsProperty" />
        <Property type="ActorAnimationProperty"/>
        <Property type="PointNClickInputProperty" />
        <Property type="ChaseCameraProperty" />
    </Entity>
</BluePrints>
