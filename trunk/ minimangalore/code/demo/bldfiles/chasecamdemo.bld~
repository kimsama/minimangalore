beginmodule chasecamdemostate
    setdir demoapp
    setfiles { demogamestate }
    setheaders { demogamestate }
endmodule
#-----------------------------------------------------------------------------
beginmodule chasecamdemo
    setdir demoapp
    setfiles { demo }
endmodule
#-----------------------------------------------------------------------------
beginmodule chasecamdemoapp
    setdir demoapp
    setheaders {
        demoapp
    }
    setfiles {
        demoapp
    }
endmodule
#-----------------------------------------------------------------------------
beginmodule demoproperties
    setdir properties
    setfiles {
        playerctrlproperty
    }
    setheaders {
        playerctrlproperty
    }
endmodule
#-----------------------------------------------------------------------------
begintarget chasecamdemoapp
    annotate "Insert a brief annotation of the target"
    settype exe
    setmodules {
        chasecamdemostate
        chasecamdemo
        chasecamdemoapp
        demoproperties
    }
    settargetdeps {
        nkernel
        nnebula
        microtcl
        ndinput8
        ndirect3d9
        ndshow
        ndsound
        ngui
        nnetwork
        ntoollib
        mangalore
    }
endtarget 
#-----------------------------------------------------------------------------
beginworkspace chasecamdemoworkspace
    settargets {
        chasecamdemoapp
        mangalore
    }
endworkspace
